<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_medium" android:background="#09C"
    android:orientation="vertical" android:padding="@dimen/widget_margin">


    <TextView android:id="@+id/appwidget_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="8dp" android:background="#09C"
        android:text="@string/recipe_name" android:textAllCaps="true" android:textColor="#ffffff"
        android:textSize="@dimen/text_large" />

    <ListView android:id="@+id/recipe_step_list_view" android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1" android:divider="@android:color/white"
        android:dividerHeight="1dp" android:padding="@dimen/margin_medium" />

</LinearLayout>